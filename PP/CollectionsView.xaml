<UserControl x:Class="PP.CollectionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:model="clr-namespace:PP.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type model:Camera}">
            <TextBlock Text="{Binding Name}"></TextBlock>
        </DataTemplate>

        <DataTemplate DataType="{x:Type model:Phone}">
            <StackPanel>
                <TextBlock Text="{Binding Name}"></TextBlock>
                <TextBlock Background="Red" Text="{Binding Model}"></TextBlock>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <ListView ScrollViewer.ScrollChanged="LoadMoreCameras" x:Name="ListView" ItemsSource="{Binding Collection}">
        </ListView>
    </Grid>
</UserControl>
